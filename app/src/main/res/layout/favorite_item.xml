<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/ll_favorite_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_med_15dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageProfilePicture"
        android:layout_width="@dimen/image_size_50dp"
        android:layout_height="@dimen/image_size_50dp"
        android:src="@drawable/user_icon"
        app:civ_border_width="3dp"
        app:civ_border_color="@color/icon_border_color_2"/>

    <TextView
        android:layout_below="@+id/circleImageProfilePicture"
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_med_15dp"
        android:text="@string/name_dummy_text"
        android:maxLines="2"
        android:ellipsize="end"
        android:maxWidth="50dp"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        />

</RelativeLayout>